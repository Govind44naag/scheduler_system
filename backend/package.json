    "helmet": "^7.2.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.11.3",
    "@types/node": "^20.19.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/knex": "^0.15.2",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.10.2",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
